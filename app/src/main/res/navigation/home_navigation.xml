<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="app.capstone.bantuansosialdetector.home.ProfileFragment"
        android:label="Home"
        tools:layout="@layout/fragment_profile" >
        <argument
            android:name="username"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="userId"/>
        <action
            android:id="@+id/action_homeFragment_to_updatePasswordFragment"
            app:destination="@id/updatePasswordFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/deliveryFragment"
        android:name="app.capstone.bantuansosialdetector.delivery.DeliveryFragment"
        android:label="Delivery"
        tools:layout="@layout/fragment_delivery" />
    <fragment
        android:id="@+id/submitFragment"
        android:name="app.capstone.bantuansosialdetector.submit.SubmitFragment"
        android:label="Submit"
        tools:layout="@layout/fragment_submit" />
    <fragment
        android:id="@+id/updatePasswordFragment"
        android:name="app.capstone.bantuansosialdetector.user.UpdateProfileFragment"
        android:label="Update Profile"
        tools:layout="@layout/fragment_update_profile" />
</navigation>